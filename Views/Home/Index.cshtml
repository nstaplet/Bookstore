@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

<header>
    
</header>

<!--This is how we will populate the view page with the book information-->
@foreach (Bookstore.Models.Book x in Model.Books)
{
    <partial name="BookSummary" model="x" />
}

<div page-model="@Model.PagingInfo" page-action="index"
     page-classes-enabled="true" page-class="btn" page-class-normal="btn outline-dark"
     page-class-selected="btn-primary" page-url-category="@Model.Type"
     class="btn-group pull-right m-1">

</div>


